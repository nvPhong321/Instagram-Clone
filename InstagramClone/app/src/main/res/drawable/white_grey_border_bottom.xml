<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#0000"
                android:endColor="#99000000"
                android:type="linear"
                android:angle="90">
