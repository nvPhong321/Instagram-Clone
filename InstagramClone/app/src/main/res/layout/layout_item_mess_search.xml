<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
     <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/imgProfileSearch"
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:layout_marginRight="15dp"
         android:layout_marginTop="10dp"
         android:src="@mipmap/ic_android"
         app:civ_border_color="@android:color/black"
         app:civ_border_width="0.1dp"/>
    <RelativeLayout
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/imgProfileSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout1">
        <RelativeLayout
            android:id="@+id/reLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="jfbkfgbjhgbhjdfbvjhdvhjdfvjd"
                android:breakStrategy="simple"
                android:id="@+id/txtUserNameSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/reLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/grey"
                android:text="jfbkfgbjhgbhjdfbvjhdvhjdfvjd"
                android:breakStrategy="simple"
                android:id="@+id/txtDislayNameSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>